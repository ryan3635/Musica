<div id="feedFlex">
    <%- include("header") %>

    <div id="toolbar">
        <% if (logged) { %>
            <a href="/" class="buttonStyle">Feed</a> &nbsp &nbsp
            <a href="/userProfile?page=1" class="buttonStyle">Your List</a> &nbsp &nbsp
            <a href="/account" class="buttonStyle">Account</a> &nbsp &nbsp
            <a href="/logout" class="buttonStyle">Log out</a>
        <% } else { %>
            <a href="/" class="buttonStyle">Go Back</a>
        <% } %>
    </div>

    <div id="header">
        <h1>Musica</h1>
        <% if (notFound) { %>
            <p class="message hidden">Album not found!</p>
        <% } %>
        <% if (error) { %>
            <p class="message hidden">Invalid Entry!</p>
        <% } %>
        <hr>

        <form action="/albumSearch" method="post">
            <input type="text" name="userArtist" placeholder="Artist">
            <br>
            <input type="text" name="userAlbum" placeholder="Album">
            <br>
            <input type="text" name="year" placeholder="Year">
            <br>
            <h2 style="color: #15333f; font-size: 23px; font-family: Itim">- or -</h2>
            <br>
            <input type="text" name="discogsId" placeholder="Discogs Master ID">
            <button type="submit" class="buttonStyle" style="font-size: 2rem; margin-top: 10px">Search</button>
        </form>
        <hr style="width: 22%; border-width: 1.9px; margin-top: -15px">
        <h2 style="color: #15333f; font-size: 23px; font-family: Itim">Entry in all fields increase accuracy although not required!</h2>
        <br>
        <h2 style="color: #15333f; font-size: 18px; font-family: Itim">Album master ID's can be found on <a href="https://www.discogs.com/" style="color: #15333f">Discogs</a></h2>
        <h2 style="color: #15333f; font-size: 18px; font-family: Itim">(For example, if the master release is [m42546], enter 42546 as the master ID)</h2>
    </div>
    <%- include("footer") %>
</div>