<div id="feedFlex">
    <%- include("header") %>

    <div id="toolbar">
        <a href="/" class="buttonStyle">Go Back</a>
    </div>
    
    <div id="header">
        <h1>Musica</h1>
        <hr>
        <% if (error) { %>
            <p class="message">One or more fields were not entered, please try again!</p>
        <% } %>

        <form action="/register" method="POST">
            <input type="email" name="username" id="username" placeholder="Email">
            <br>
            <input type="password" name="password" id="password" placeholder="Password">
            <br>
            <button type="submit" value="Register" class="buttonStyle" style="font-size: 2rem">Register</button>
        </form>
    </div>
    
    <hr style="width: 25%; border-width: 2px; margin-top: -20px">
    <br>
    <a href="/auth/google" role="button" class="buttonStyle">Sign Up With Google</a>

    <%- include("footer") %>
</div>