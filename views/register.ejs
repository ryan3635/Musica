<div id="feedFlex">
    <%- include("header") %>

    <div id="toolbar">
        <p>Musica</p>
        <a href="/" class="buttonStyle">Go Back</a>
    </div>
    
    <div id="header">
        <% if (error) { %>
            <p class="message hidden">One or More Fields Were Not Entered!</p>
        <% } %>

        <% if (duplicatePwError) { %>
            <p class="message hidden">Re-Entered Password Didn't Match!</p>
        <% } %>

        <% if (duplicateEmail) { %>
            <p class="message hidden">Email Address Already Used!</p>
        <% } %>

        <% if (duplicateDisplayname) { %>
            <p class="message hidden">Display Name Already Used!</p>
        <% } %>

        <% if (displaynameError) { %>
            <p class="message hidden">Display Name Must Only Contain Letters and Numbers!</p>
        <% } %>

        <% if (displaynameSwear) { %>
            <p class="message hidden">Display Name Must Not Contain Swear Words nor Asterisks!</p>
        <% } %>

        <h2>Register</h2>
        
        <form action="/register" method="POST">
            <input type="email" name="username" id="username" placeholder="Email">
            <br>
            <input type="text" name="displayname" id="displayname" maxlength="20" placeholder="Display Name">
            <br>
            <input type="password" name="passwordNew1" id="passwordNew1" placeholder="New Password">
            <br>
            <input type="password" name="passwordNew2" id="passwordNew2" placeholder="Re-Enter New Password">
            <br>
            <button type="submit" value="Register" class="buttonStyle" style="font-size: 1.8rem">Enter</button>
        </form>

        <hr style="width: 22%; border-width: 1.9px; margin-top: -15px">
        <br>
        <a href="/auth/google" role="button" class="buttonStyle">Sign Up With Google</a>
    </div>
    
    <%- include("footer") %>
</div>