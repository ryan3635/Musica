<div id="feedFlex">
    <%- include("header") %>
    <div id="toolbar">
        <p>Musica</p>
        <a href="/" class="buttonStyle">Go Back</a>
    </div>

    <div id="header">
        <% if (entered) { %>
            <p class="message hidden">Email Sent!</p>
        <% } %>

        <% if (error) { %>
            <p class="message hidden">Please Enter a Valid Email!</p>
        <% } %>

        <% if (noEmail) { %>
            <p class="message hidden">No User With Entered Email Exists!</p>
        <% } %>

        <% if (tokenExpired) { %>
            <p class="message hidden">Reset Expired! Please Request Again</p>
        <% } %>

        <h2>Forgot Password?</h2>
        <form action="/forget" method="POST">
            <input type="email" name="username" id="username" placeholder="Email">
            <br>
            <button type="submit" value="Recovery" class="buttonStyle" style="font-size: 2rem; text-underline-offset: 7px;">Send Recovery Email</button>
        </form>
    </div>

    <hr style="width: 22%; border-width: 1.9px; margin-top: -14px">
    <h2 style="color: #15333f; font-size: 18px; font-family: Itim">If you do not see the recovery email, please check your spam folder!</h2>
    <br>

    <%- include("footer") %>
</div>