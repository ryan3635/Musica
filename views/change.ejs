<div id="feedFlex">
    <%- include("header") %>
    <div id="toolbar">
        <% if (!googleAcc) { %>
            <a href="/account" class="buttonStyle">Go Back</a> &nbsp &nbsp
        <% } %>
    </div>

    <div id="header">
        <h1>Musica</h1>
        <% if (error) { %>
            <p class="message hidden">One or More Fields Were Not Entered!</p>
        <% } %>

        <% if (pwError) { %>
            <p class="message hidden">Incorrect Account Password!</p>
        <% } %>

        <% if (duplicatePwError) { %>
            <p class="message hidden">Re-Entered Password Didn't Match!</p>
        <% } %>
        
        <% if (duplicateEmail) { %>
            <p class="message hidden">Email Address Already Used!</p>
        <% } %>

        <% if (duplicateDisplayname) { %>
            <p class="message hidden">Display Name Already Used!</p>
        <% } %>
        <hr>
        <h2>User Account Settings</h2>

        <% if (buttonValue === 'changeDisplayname') { %>
            <form action="/change/displayname" method="POST">
                <input type="text" name="displayname" id="displayname" placeholder="New Display Name">
                <br>
                <% if (!googleAcc) { %>
                    <input type="password" name="password" id="password" placeholder="Account Password">
                    <br>
                <% } %>
                <button type="submit" value="<%=buttonValue%>" class="buttonStyle" style="font-size: 2rem">Update Display Name</button>
            </form>
        <% } %>
    
        <% if (buttonValue === 'changeEmail') { %>
            <form action="/change/email" method="POST">
                <input type="email" name="email" id="email" placeholder="New Email">
                <br>
                <input type="password" name="password" id="password" placeholder="Account Password">
                <br>
                <button type="submit" value="<%=buttonValue%>" class="buttonStyle" style="font-size: 2rem">Update Email</button>
            </form>
        <% } %>
    
        <% if (buttonValue === 'changePassword') { %>
            <form action="/change/password" method="POST">
                <input type="password" name="password" id="password" placeholder="Current Account Password">
                <br>
                <input type="password" name="passwordNew1" id="passwordNew1" placeholder="New Password">
                <br>
                <input type="password" name="passwordNew2" id="passwordNew2" placeholder="Re-Enter New Password">
                <br>
                <button type="submit" value="<%=buttonValue%>" class="buttonStyle" style="font-size: 2rem">Update Password</button>
            </form>
        <% } %>
    
        <hr style="width: 22%; border-width: 1.9px; margin-top: -15px">
        <br>
    </div>

    <%- include("footer") %>
</div>