<div id="feedFlex">
    <%- include("header") %>
    <div id="toolbar">
        <a href="/" class="buttonStyle">Go Back</a>
    </div>

    <div id="header">
        <h1>Musica</h1>
        <% if (accCreated) { %>
            <p class="message hidden">Account Created! Please Login</p>
        <% } %>

        <% if (error) { %>
            <p class="message hidden">Incorrect Email or Password!</p>
        <% } %>

        <% if (pwReset) { %>
            <p class="message hidden">Password Reset! Please Login</p>
        <% } %>
        <hr>

        <form action="/login" method="POST">
            <input type="email" name="username" id="username" placeholder="Email">
            <br>
            <input type="password" name="password" id="password" placeholder="Password">
            <br>
            <button type="submit" value="Login" class="buttonStyle" style="font-size: 2rem">Login</button>
        </form>
        <hr style="width: 25%; border-width: 2px; margin-top: -15px">
        <br>
    
        <a href="/auth/google" role="button" class="buttonStyle" style="display: inline-block; text-align: center">Sign In With Google</a>
        <br>
        <a href="/forget" role="button" class="buttonStyle" style="display: inline-block; text-align: center">Forgot Password?</a>
    </div>

    <%- include("footer") %>
</div>